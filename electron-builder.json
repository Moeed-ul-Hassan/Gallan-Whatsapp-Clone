{
  "appId": "com.zylox.gallan",
  "productName": "Gallan",
  "directories": {
    "output": "releases",
    "buildResources": "resources"
  },
  "files": [
    "dist/**/*",
    "dist-electron/**/*",
    "!node_modules/**/*"
  ],
  "extraMetadata": {
    "main": "dist-electron/electron/main.js"
  },
  "win": {
    "target": [
      "nsis"
    ],
    "icon": "resources/icon.svg"
  },
  "mac": {
    "target": [
      "dmg"
    ],
    "icon": "resources/icon.svg"
  },
  "linux": {
    "target": [
      "AppImage",
      "deb"
    ],
    "icon": "resources/icon.svg",
    "category": "Network;InstantMessaging"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "shortcutName": "Gallan"
  },
  "publish": null
}